#include <stdio.h>

int imprimir(char c, int p){
    int i, k;
    for(i = 0; i < p; i++){
        for(k = 0; k < i; k++){
            printf("%c ", c);
        }
        printf("\n");
    }
    return p*p / 2;
}

int main()
{
    printf("%d", imprimir('*', 7));
    return 0;
}

